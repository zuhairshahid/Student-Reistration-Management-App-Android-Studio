<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/administrationTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msgBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/facultyBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Faculty"
        android:textSize="50px"/>

    <EditText
        android:id="@+id/departmentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:textSize="50px"/>

    <EditText
        android:id="@+id/lecturerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lecturer"
        android:textSize="50px"/>
    <Button
        android:id="@+id/addBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:onClick="add"
        />
    <Button
        android:id="@+id/deleteBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:onClick="delete"
        />
    <Button
        android:id="@+id/showBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show"
        android:onClick="show"
        />
    <Button
        android:id="@+id/searchBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="search"
        />
    <Button
        android:id="@+id/updateBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:onClick="updateAdministration"
        />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>